<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a2017_09_13.sapi_news_2017.ForgotPasswordActivity"
    android:background="@drawable/szurek_hatter">

    <LinearLayout
        android:id="@+id/loginlinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Reset password"
            android:textColor="@color/feher"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/feher"
            android:textSize="40sp"
            android:text="Sapi News 2017"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="45dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:id="@+id/textView" />


        <EditText
            android:id="@+id/et_email"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="30dp"
            android:textColorHint="@color/feher"
            android:hint="Email" />

        <Button
            android:id="@+id/btn_verirification"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Send verification email" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
